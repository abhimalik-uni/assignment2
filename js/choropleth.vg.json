{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/abhimalik-uni/assignment2/main/js/new.topojson",
    "format": {"type": "topojson", "feature": "vic_localities"}
  },
  "params": [
    {
      "name": "suburbSearch",
      "bind": {
        "input": "search",
        "placeholder": "Suburb Name",
        "name": "Search for a suburb: "
      },
      "value": ""
    }
  ],
  "transform": [
    {
      "lookup": "properties.LOC_NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/abhimalik-uni/assignment2/main/data/suburb_medians.csv"
        },
        "key": "Suburb",
        "fields": ["Suburb", "MedianPrice", "Regionname"]
      }
    }
  ],
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/abhimalik-uni/assignment2/main/js/ocean.topojson",
        "format": {"type": "topojson", "feature": "rectangle"}
      },
      "mark": {"type": "geoshape", "fill": "deepskyblue"}
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.5,
        "fill": "lightgray"
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5,
        "tooltip": true
      },
      "encoding": {
        "color": {
          "field": "MedianPrice",
          "type": "quantitative",
          "title": "Median Price (AUD)",
          "scale": {"scheme": "reds"},
          "legend": {
            "orient": "top-right"  
          }
        },
        "opacity": {
          "condition": {
            "test": "test(regexp(suburbSearch, 'i'), datum.Suburb)",
            "value": 1
          },
          "value": 0.1
        },
        "tooltip": [
          {"field": "properties.LOC_NAME", "type": "nominal", "title": "Suburb"},
          {"field": "Regionname", "type": "nominal", "title": "Region"},
          {"field": "MedianPrice", "type": "quantitative", "title": "Median Price (AUD)"}
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/abhimalik-uni/assignment2/main/js/MODIFIED_RIVERS.topojson",
        "format": {"type": "topojson", "feature": "MODIFIED_RIVERS"}
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "geoshape",
        "fill": "skyblue",
        "stroke": "skyblue",
        "strokeWidth": 3
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Port Phillip Bay",
        "fontSize": 12,
        "color": "black",
        "align": "left",
        "baseline": "bottom",
        "x": 280,
        "y": 420,
        "font": "Arial",
        "fontWeight": "normal"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "Yarra River",
        "fontSize": 12,
        "color": "black",
        "align": "left",
        "baseline": "bottom",
        "x": 533,
        "y": 230,
        "font": "Arial",
        "fontWeight": "normal"
      }
    },
    {
      "mark": {
        "type": "text",
        "text": "City Centre",
        "fontSize": 12,
        "color": "black",
        "align": "left",
        "baseline": "bottom",
        "x": 295,
        "y": 335,
        "font": "Arial",
        "fontWeight": "normal"
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {"value": 340},
        "y": {"value": 320},
        "x2": {"value": 357},
        "y2": {"value": 268}
      }
    },

    {
      "mark": {
        "type": "rule",
        "color": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "x": {"value":560},
        "y": {"value":217},
        "x2": {"value": 530},
        "y2": {"value": 200}
      }
    }
  ],
  "title": {"text": "Victoria Median Property Prices", "fontSize": 16, "anchor": "middle"},
  "width": 800,
  "height": 680
}
